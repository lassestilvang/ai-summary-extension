{
  "manifest_version": 3,
  "name": "AI Page Summarizer",
  "version": "1.0",
  "description": "Summarizes the current page using AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "http://localhost:3000/"
  ],
  "action": {
    "default_title": "AI Page Summarizer"
  },
  "background": {
    "service_worker": "background.js"
  }
}
