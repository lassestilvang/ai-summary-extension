{
  "manifest_version": 3,
  "name": "AI Summary",
  "version": "1.0.0",
  "description": "ðŸš€ One-click AI summary of any web page! Supports GPT-4, Gemini, Claude, and free Chrome AI. Instant, secure, and customizable",
  "icons": {
    "128": "icon.png",
    "1024": "icon-1024.png"
  },
  "permissions": ["activeTab", "scripting", "storage", "commands"],
  "optional_host_permissions": [
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.anthropic.com/*"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Summarize current page"
    }
  },
  "action": {
    "default_title": "AI Summary"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["readability.js", "showdown.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["readability.js", "showdown.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options.html"
}
