{
  "name": "ai-page-summarizer",
  "version": "1.0.0",
  "description": "AI-powered Chrome extension for summarizing web pages",
  "type": "module",
  "scripts": {
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "prebuild": "rimraf dist",
    "build": "npm run copy-readability && tsc && npm run copy-assets",
    "copy-assets": "cpy manifest.json options.html icon.png icon-1024.png showdown.min.js Readability.js dist/ --flat",
    "copy-readability": "cp node_modules/@mozilla/readability/Readability.js ./Readability.js",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "install-deps": "npm install"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/chrome": "^0.1.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^3.2.5",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2",
    "cpy-cli": "^4.2.0",
    "rimraf": "^5.0.0"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0"
  }
}
