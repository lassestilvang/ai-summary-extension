{
  "name": "ai-page-summarizer",
  "version": "2.0.0",
  "description": "AI-powered Chrome extension for summarizing web pages",
  "type": "module",
  "scripts": {
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "prebuild": "rimraf dist",
    "build": "npm run copy-readability && vite build && npm run copy-assets",
    "copy-assets": "cpy manifest.json options.html icon.png icon-1024.png showdown.js readability.js dist/ --flat",
    "copy-readability": "cp node_modules/@mozilla/readability/Readability.js ./readability.js",
    "dev": "vite dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "install-deps": "npm install"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@stryker-mutator/core": "^8.7.1",
    "@stryker-mutator/jest-runner": "^8.7.1",
    "@stryker-mutator/typescript-checker": "^8.7.1",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.1.24",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.23",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "cpy-cli": "^4.2.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "terser": "^5.44.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0"
  }
}
